<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="32dp">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your first Overrun Threshold is set!"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/mint_dark_text"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <FrameLayout
        android:id="@+id/circleContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        
        <!-- 원형 프로그레스 배경 -->
        <ImageView
            android:id="@+id/progressCircle"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:contentDescription="Progress circle"
            android:src="@drawable/progress_circle_80"
            android:layout_gravity="center" />
            
        <!-- 다람쥐 이미지 -->
        <ImageView
            android:id="@+id/hamsterImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="bottom|center_horizontal"
            android:contentDescription="Hamster image"
            android:src="@drawable/iv_hamster" />
            
        <!-- 텍스트 -->
        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:orientation="vertical"
            android:gravity="center">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="80%"
                android:textSize="36sp"
                android:textStyle="bold"
                android:textColor="@color/mint_dark_text" />
                
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alert Level"
                android:textSize="14sp"
                android:textColor="@color/mint_secondary_text" />
        </LinearLayout>
    </FrameLayout>

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="We've set this level based on your usage and motivation. Let's work together to bring it down over time!"
        android:textSize="16sp"
        android:textColor="@color/mint_secondary_text"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/circleContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnStartManaging"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Start managing now"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/mint_primary"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>