<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="32dp">
    
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:fillViewport="true"
        android:paddingBottom="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnStartManaging"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        
        <androidx.constraintlayout.widget.ConstraintLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your first\nOverrun Threshold\nis set!"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#426A5A"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="20dp"/>

            <FrameLayout
                android:id="@+id/circleContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                app:layout_constraintTop_toBottomOf="@id/tvTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                
                <!-- 원형 프로그레스 배경 - 빨간색 반원 -->
                <ImageView
                    android:id="@+id/progressCircle"
                    android:layout_width="220dp"
                    android:layout_height="220dp"
                    android:contentDescription="Progress circle"
                    android:src="@drawable/progress_circle_80"
                    android:layout_gravity="center" />
                    
                <!-- 텍스트 그룹 -->
                <LinearLayout
                    android:layout_width="220dp"
                    android:layout_height="220dp"
                    android:orientation="vertical"
                    android:gravity="center">
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="80%"
                        android:textSize="50sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_marginTop="-40dp"/>
                        
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Alert Level"
                        android:textSize="16sp"
                        android:textColor="#666666" />
                </LinearLayout>
                
                <!-- 폰 이미지 -->
                <ImageView
                    android:id="@+id/phoneImage"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center|bottom"
                    android:contentDescription="Phone image"
                    android:src="@drawable/iv_phone" />
                    
                <!-- 다람쥐 이미지 - 프레임으로 감싸기 -->
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|bottom">
                
                    <ImageView
                        android:id="@+id/hamsterImage"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginBottom="5dp"
                        android:contentDescription="Hamster image"
                        android:src="@drawable/iv_hamster" />
                </FrameLayout>
            </FrameLayout>

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="We've set this level based on your usage and motivation. Let's work together to bring it down over time!"
                android:textSize="16sp"
                android:textColor="#666666"
                android:layout_marginTop="80dp"
                app:layout_constraintTop_toBottomOf="@id/circleContainer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
                
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnStartManaging"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Start managing now"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:backgroundTint="#75C3A2"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>