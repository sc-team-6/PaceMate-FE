<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="32dp">

    <ImageView
        android:id="@+id/ivPhoneHamster"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Phone with hamster"
        android:src="@drawable/iv_phone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/ivHamster"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Hamster"
        android:src="@drawable/iv_hamster"
        app:layout_constraintTop_toTopOf="@id/ivPhoneHamster"
        app:layout_constraintStart_toStartOf="@id/ivPhoneHamster"
        app:layout_constraintEnd_toEndOf="@id/ivPhoneHamster"
        app:layout_constraintBottom_toBottomOf="@id/ivPhoneHamster" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WHAT IS OVERRUN?"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/mint_text"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/ivPhoneHamster"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvOverrunScoreDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="The Overrun Score reflects your screen time and usage patterns. Here's what to watch out for:"
        android:textSize="16sp"
        android:textColor="@color/mint_secondary_text"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/warningContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvOverrunScoreDesc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">
            
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_warning"
                android:tint="@color/mint_alert" />
                
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Long, repetitive scrolling"
                android:textSize="16sp"
                android:textColor="#333333"
                android:layout_marginStart="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">
            
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_warning"
                android:tint="@color/mint_alert" />
                
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Extended use of high-risk apps"
                android:textSize="16sp"
                android:textColor="#333333"
                android:layout_marginStart="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_warning"
                android:tint="@color/mint_alert" />
                
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Using your phone during sleep hours"
                android:textSize="16sp"
                android:textColor="#333333"
                android:layout_marginStart="16dp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tvWarningNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="When these behaviors are detected, your Overrun Score goes up. If it crosses the set limit, you'll see a gentle alert pop-up."
        android:textSize="16sp"
        android:textColor="@color/mint_secondary_text"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/warningContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
        
    <TextView
        android:id="@+id/tvSupportNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="We'll ask a few quick questions to better support your goals."
        android:textSize="16sp"
        android:textColor="@color/mint_secondary_text"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvWarningNote"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnSetItUp"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Set It Up"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/mint_primary"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>