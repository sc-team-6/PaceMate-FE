<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="32dp">

    <!-- Guidelines to position elements -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline30Percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25" />

    <!-- Image above the welcome text -->
    <ImageView
        android:id="@+id/ivPhone"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:contentDescription="Phone image"
        android:src="@drawable/iv_phone"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@id/guideline30Percent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="10dp"/>

    <!-- Welcome text positioned at 30% from top -->
    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WELCOME ABOARD! ðŸš€"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/mint_text"
        app:layout_constraintTop_toTopOf="@id/guideline30Percent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Description texts below the welcome text -->
    <TextView
        android:id="@+id/tvDescription1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="You've just taken your first step toward a more balanced digital life."
        android:textSize="16sp"
        android:textColor="@color/mint_secondary_text"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/tvWelcome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvDescription2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="We'll guide you with the Overrun Index, a smart way to catch unhealthy usage patterns before they take over."
        android:textSize="16sp"
        android:textColor="@color/mint_secondary_text"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/tvDescription1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Next button at the bottom -->
    <Button
        android:id="@+id/btnNext"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Next"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/mint_primary"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>