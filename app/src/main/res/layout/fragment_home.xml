<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    android:fitsSystemWindows="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Date Bar -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/date_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="#F5F9F7"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monday, April 8, 2025"
                android:textColor="#82C4A9"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_calendar"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_calendar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="#82C4A9" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Overrun Score Section -->
        <TextView
            android:id="@+id/tv_overrun_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:text="Overrun Score"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/date_bar" />

        <TextView
            android:id="@+id/tv_overrun_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:text="from the Past Hour"
            android:textColor="#7F7F7F"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_overrun_title" />

        <!-- Circular Progress -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/circular_progress_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tv_overrun_subtitle">

            <com.example.myapplication.views.CircularProgressView
                android:id="@+id/circular_progress"
                android:layout_width="270dp"
                android:layout_height="270dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_percentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="55%"
                android:textColor="@color/black"
                android:textSize="56sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/circular_progress"
                app:layout_constraintEnd_toEndOf="@id/circular_progress"
                app:layout_constraintStart_toStartOf="@id/circular_progress"
                app:layout_constraintTop_toTopOf="@id/circular_progress"
                app:layout_constraintVertical_bias="0.35" />

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_status_pill"
                android:paddingStart="20dp"
                android:paddingTop="8dp"
                android:paddingEnd="20dp"
                android:paddingBottom="8dp"
                android:text="Warming Up"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@id/circular_progress"
                app:layout_constraintStart_toStartOf="@id/circular_progress"
                app:layout_constraintTop_toBottomOf="@id/tv_percentage" />

            <ImageView
                android:id="@+id/iv_hamster"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="@id/circular_progress"
                app:layout_constraintStart_toStartOf="@id/circular_progress"
                app:layout_constraintTop_toBottomOf="@id/tv_status" />

            <!-- Min, Max, and Alert Level -->
            <TextView
                android:id="@+id/tv_min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30%"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@id/tv_alert_level"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/circular_progress" />

            <TextView
                android:id="@+id/tv_min_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MIN"
                android:textColor="#7F7F7F"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@id/tv_min"
                app:layout_constraintStart_toStartOf="@id/tv_min"
                app:layout_constraintTop_toBottomOf="@id/tv_min" />

            <TextView
                android:id="@+id/tv_alert_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="80%"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@id/tv_max"
                app:layout_constraintStart_toEndOf="@id/tv_min"
                app:layout_constraintTop_toBottomOf="@id/circular_progress" />

            <TextView
                android:id="@+id/tv_alert_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alert Level"
                android:textColor="#7F7F7F"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@id/tv_alert_level"
                app:layout_constraintStart_toStartOf="@id/tv_alert_level"
                app:layout_constraintTop_toBottomOf="@id/tv_alert_level" />

            <TextView
                android:id="@+id/tv_max"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="55%"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tv_alert_level"
                app:layout_constraintTop_toBottomOf="@id/circular_progress" />

            <TextView
                android:id="@+id/tv_max_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MAX"
                android:textColor="#7F7F7F"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@id/tv_max"
                app:layout_constraintStart_toStartOf="@id/tv_max"
                app:layout_constraintTop_toBottomOf="@id/tv_max" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Advice Text -->
        <TextView
            android:id="@+id/tv_advice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:text="Things are speeding up - slow down and take a breath."
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/circular_progress_container" />

        <!-- Today's Alert Section -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/alert_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/tv_advice">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/alert_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tv_alert_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Today's Alert"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/iv_dropdown"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_dropdown"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- YouTube Alert Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_youtube"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:layout_constraintTop_toBottomOf="@id/alert_header">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/iv_youtube"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_youtube"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_highest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="highest"
                        android:textColor="#7F7F7F"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_highest_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="55%"
                        android:textColor="#FFCC00"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_highest" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <!-- Unhealthy Usage Pattern Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_unhealthy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:layout_constraintTop_toBottomOf="@id/card_youtube">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_unhealthy_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:text="We've noticed an unhealthy usage pattern."
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_unhealthy_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="8dp"
                        android:text="Unhealthy usage can have a bigger impact on your dopamine levels."
                        android:textColor="#7F7F7F"
                        android:textSize="14sp"
                        app:layout_constraintTop_toBottomOf="@id/tv_unhealthy_title" />

                    <!-- Screen Time Stats -->
                    <LinearLayout
                        android:id="@+id/ll_stats"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toBottomOf="@id/tv_unhealthy_desc">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_total_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="00h 52min"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Total Screen time"
                                android:textColor="#7F7F7F"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_low_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="00h 52min"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="In a low"
                                android:textColor="#7F7F7F"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_scroll"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1m"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Scroll length"
                                android:textColor="#7F7F7F"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Warning About Scheduled Time -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/ll_stats">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_warning"
                            app:tint="#FFCC00" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="You used your phone during a key scheduled time."
                            android:textColor="@color/black"
                            android:textSize="14sp" />
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Bottom padding -->
        <View
            android:layout_width="match_parent"
            android:layout_height="24dp"
            app:layout_constraintTop_toBottomOf="@id/alert_section" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>