<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="32dp">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:fillViewport="true"
        android:paddingBottom="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/buttonLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvQuestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="What's your average daily screen time?"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#426A5A"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="20dp"/>

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/tvQuestion"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <RadioButton
                    android:id="@+id/radioOption1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Less than 2 hours"
                    android:textSize="16sp"
                    android:paddingVertical="12dp"
                    android:paddingStart="12dp"
                    android:paddingEnd="0dp"
                    android:buttonTint="#75C3A2"
                    android:textColor="#333333" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#F0F0F0" />

                <RadioButton
                    android:id="@+id/radioOption2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3-4 hours"
                    android:textSize="16sp"
                    android:paddingVertical="12dp"
                    android:paddingStart="12dp"
                    android:paddingEnd="0dp"
                    android:buttonTint="#75C3A2"
                    android:textColor="#333333" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#F0F0F0" />

                <RadioButton
                    android:id="@+id/radioOption3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="5-7 hours"
                    android:textSize="16sp"
                    android:paddingVertical="12dp"
                    android:paddingStart="12dp"
                    android:paddingEnd="0dp"
                    android:buttonTint="#75C3A2"
                    android:textColor="#333333" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#F0F0F0" />

                <RadioButton
                    android:id="@+id/radioOption4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="More than 8 hours"
                    android:textSize="16sp"
                    android:paddingVertical="12dp"
                    android:paddingStart="12dp"
                    android:paddingEnd="0dp"
                    android:buttonTint="#75C3A2"
                    android:textColor="#333333" />
            </RadioGroup>

            <TextView
                android:id="@+id/tvQuestion2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="What type of usage do you most want to reduce?"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#426A5A"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@id/radioGroup"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <RadioGroup
                android:id="@+id/radioGroup2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/tvQuestion2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <RadioButton
                    android:id="@+id/radioOption5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Social Media (Instagram, TikTok, etc.)"
                    android:textSize="16sp"
                    android:paddingVertical="12dp"
                    android:paddingStart="12dp"
                    android:paddingEnd="0dp"
                    android:buttonTint="#75C3A2"
                    android:textColor="#333333" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#F0F0F0" />

                <RadioButton
                    android:id="@+id/radioOption6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Media Content (YouTube, Netflix, etc.)"
                    android:textSize="16sp"
                    android:paddingVertical="12dp"
                    android:paddingStart="12dp"
                    android:paddingEnd="0dp"
                    android:buttonTint="#75C3A2"
                    android:textColor="#333333" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#F0F0F0" />

                <RadioButton
                    android:id="@+id/radioOption7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Games"
                    android:textSize="16sp"
                    android:paddingVertical="12dp"
                    android:paddingStart="12dp"
                    android:paddingEnd="0dp"
                    android:buttonTint="#75C3A2"
                    android:textColor="#333333" />
            </RadioGroup>

            <!-- 새로운 질문 추가 -->
            <TextView
                android:id="@+id/tvQuestion3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="How much would you like to reduce your smartphone use?"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#426A5A"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@id/radioGroup2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <RadioGroup
                android:id="@+id/radioGroup3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/tvQuestion3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <RadioButton
                    android:id="@+id/radioOption8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="A lot"
                    android:textSize="16sp"
                    android:paddingVertical="12dp"
                    android:paddingStart="12dp"
                    android:paddingEnd="0dp"
                    android:buttonTint="#75C3A2"
                    android:textColor="#333333" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#F0F0F0" />

                <RadioButton
                    android:id="@+id/radioOption9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="A little"
                    android:textSize="16sp"
                    android:paddingVertical="12dp"
                    android:paddingStart="12dp"
                    android:paddingEnd="0dp"
                    android:buttonTint="#75C3A2"
                    android:textColor="#333333" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#F0F0F0" />

                <RadioButton
                    android:id="@+id/radioOption10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="I'd like to keep my current level"
                    android:textSize="16sp"
                    android:paddingVertical="12dp"
                    android:paddingStart="12dp"
                    android:paddingEnd="0dp"
                    android:buttonTint="#75C3A2"
                    android:textColor="#333333" />
            </RadioGroup>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnLater"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="Maybe later"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textColor="@color/mint_secondary_text"
            android:backgroundTint="@color/mint_secondary_background"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnNext"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="Next"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/mint_primary" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>