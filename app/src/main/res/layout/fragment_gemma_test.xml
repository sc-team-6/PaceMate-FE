<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/text_gemma_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gemma 테스트"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/text_gemma_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="이 화면에서 Gemma AI 모델을 테스트할 수 있습니다."
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/text_gemma_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btn_run_gemma_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gemma 테스트 실행"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/text_gemma_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/text_gemma_result"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="여기에 결과가 표시됩니다."
        android:padding="16dp"
        android:background="#F5F5F5"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/btn_run_gemma_test"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>