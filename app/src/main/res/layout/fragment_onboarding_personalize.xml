<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="32dp">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Would you like us to consider your calendar events?"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/mint_dark_text"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="We can give extra weight to usage before or during scheduled events."
        android:textSize="16sp"
        android:textColor="@color/mint_secondary_text"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnSetAccess"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Set Access Permissions"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/mint_primary"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvDescription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvSleepTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="When do you usually go to sleep?"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/mint_dark_text"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/btnSetAccess"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvSleepDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Phone use during sleep hours may have a bigger impact on your health."
        android:textSize="16sp"
        android:textColor="@color/mint_secondary_text"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvSleepTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/timePickerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvSleepDescription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvStartTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="22:00"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/mint_dark_text"
            android:padding="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/mint_dark_text"
            android:padding="16dp" />

        <TextView
            android:id="@+id/tvEndTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="07:00"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/mint_dark_text"
            android:padding="16dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnLater"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="Maybe later"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textColor="@color/mint_secondary_text"
            android:backgroundTint="@color/mint_secondary_background"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnNext"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="Next"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/mint_primary" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>